<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dsource.idc.jellowintl">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:fullBackupContent="@null"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".SimpleIME"
            android:label="@string/simple_ime"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />

            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
        </service>

        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Intro"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="Introduction to Jellow"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SequenceActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".UserRegistrationActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Settings"
            android:screenOrientation="landscape" />
        <activity
            android:name=".KeyboardInputActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Keyboard Input"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AboutJellowActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="About Jellow"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ProfileFormActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Profile"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".FeedbackActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Feedback"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".TutorialActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Tutorial"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ResetPreferencesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Reset Preferences"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="landscape" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LevelTwoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LevelThreeActivity"
            android:screenOrientation="landscape" />

        <service android:name=".utility.JellowTTSService" />

        <activity
            android:name=".LanguageDownloadActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".LanguageSelectActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SearchActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/search_act_title"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".makemyboard.MyBoards"
            android:label="@string/my_boards"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity
            android:name=".makemyboard.IconSelectActivity"
            android:label="Select your icons"
            android:screenOrientation="landscape" />
        <activity
            android:name=".makemyboard.EditBoard"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity android:name=".verbiage_model.ConverterActivity" />
        <activity
            android:name=".makemyboard.BoardSearch"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/search_act_title"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".makemyboard.BoardHome"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity
            android:name=".makemyboard.AddEditIconAndCategory"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity android:name=".utility.ImageHelper"/>
    </application>

</manifest>