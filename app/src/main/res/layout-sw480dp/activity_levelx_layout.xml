<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level1_bg"
    android:tag="small">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:layout_constraintVertical_bias="1.05"
        android:src="@drawable/wave"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:id="@+id/positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycler_view"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivlike"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:src="@drawable/like"
            android:contentDescription="@string/like"/>
        <ImageView
            android:id="@+id/ivyes"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:layout_marginVertical="24dp"
            android:src="@drawable/yes"
            android:contentDescription="@string/yes"/>
        <ImageView
            android:id="@+id/ivadd"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:src="@drawable/more"
            android:contentDescription="@string/more"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycler_view"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivdislike"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:src="@drawable/dontlike"
            android:contentDescription="@string/dont_like"/>
        <ImageView
            android:id="@+id/ivno"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:layout_marginVertical="24dp"
            android:src="@drawable/no"
            android:contentDescription="@string/no"/>
        <ImageView
            android:id="@+id/ivminus"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:src="@drawable/less"
            android:contentDescription="@string/less"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical"
        app:layout_constraintVertical_bias=".15"
        app:layout_constraintWidth_percent=".65"
        app:layout_constraintHeight_percent=".778"
        app:layout_constraintTop_toTopOf="@+id/parent"
        app:layout_constraintBottom_toBottomOf="@+id/wave"
        app:layout_constraintLeft_toRightOf="@+id/positive"
        app:layout_constraintRight_toLeftOf="@+id/negative"/>
    <TextView
        android:id="@+id/place_holder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/positive"
        app:layout_constraintBottom_toBottomOf="@+id/positive"
        app:layout_constraintLeft_toRightOf="@+id/positive"
        app:layout_constraintRight_toLeftOf="@+id/negative"
        android:textSize="16sp"
        android:visibility="gone"
        android:text="@string/place_holder_no_icons_added"
        android:textColor="@color/light_grey"/>

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.04">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/back"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/ivhome"
            android:layout_width="76dp"
            android:layout_height="84dp"
            android:layout_marginHorizontal="30dp"
            android:contentDescription="@string/home"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/keyboard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/keyboard_open"
            android:src="@drawable/keyboard" />
    </LinearLayout>
    <ImageView
        android:id="@+id/jellow_logo"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:src="@drawable/jellow"
        android:clickable="false"
        android:elevation="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:importantForAccessibility="no"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="6dp">
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/profile_save_btn_height"
            android:textSize="@dimen/profile_save_btn_txt_size"
            android:paddingLeft="@dimen/mmb_btn_pad"
            android:paddingRight="@dimen/mmb_btn_pad"
            android:background="@drawable/edit_board_dialog_edit_text"
            android:textAllCaps="false"
            android:text="@string/txtSave"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/anim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <include layout="@layout/activity_anim"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
