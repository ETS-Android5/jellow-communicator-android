<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/vl_padding"
        android:paddingTop="@dimen/vl_padding">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/vl_exp_icon_width"
        android:layout_height="@dimen/vl_exp_icon_height"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:src="@drawable/like"
        android:focusableInTouchMode="true"
        />
    <EditText
        android:id="@+id/verbiage_text"
        android:layout_width="@dimen/verbiage_list_item_width"
        android:layout_height="@dimen/verbiage_list_item_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/icon"
        android:background="@drawable/edit_board_dialog_edit_text"
        android:hint="@string/i_like"
        android:textColorHint="@color/light_grey"
        android:maxLines="1"
        android:padding="4dp"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:focusedByDefault="false"
        android:textColor="@color/black_80"
        android:textSize="@dimen/verbiage_list_et_text"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/icon" />

        <EditText
            android:id="@+id/verbiage_really_text"
            android:layout_width="@dimen/verbiage_list_item_width"
            android:textColorHint="@color/light_grey"
            android:layout_height="@dimen/verbiage_list_item_height"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/verbiage_text"
            android:background="@drawable/edit_board_dialog_edit_text"
            android:hint="@string/really_like"
            android:maxLines="1"
            android:padding="4dp"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:focusedByDefault="false"
            android:textColor="@color/black_80"
            android:textSize="@dimen/verbiage_list_et_text" />
    <ImageView
        android:id="@+id/add_remove"
        android:layout_width="@dimen/verbiage_item_add_remove"
        android:layout_height="@dimen/verbiage_item_add_remove"
        android:layout_toRightOf="@id/verbiage_really_text"
        android:layout_centerVertical="false"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="-4dp"
        android:src="@drawable/minus"

        />
    </RelativeLayout>

</RelativeLayout>