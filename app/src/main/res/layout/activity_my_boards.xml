<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dsource.idc.jellowintl.makemyboard.BoardActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/board"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/my_board_four_grid_icon_size"
                android:padding="@dimen/my_boards_card_margin"
                android:layout_height="@dimen/my_board_four_grid_icon_size"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_plus"
                android:id="@+id/add_board"
                android:background="@drawable/board_list_back"
                />
            <TextView
                android:layout_width="@dimen/my_board_four_grid_icon_size"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/add_board"
                android:textAlignment="center"
                android:layout_below="@id/add_board"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/my_board_text_size"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="@dimen/my_board_four_grid_icon_size"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/left_mar_my_boards"
            android:layout_centerVertical="true"
            >
        <RelativeLayout
            android:layout_width="@dimen/my_board_four_grid_icon_size"
            android:background="@drawable/board_list_back"
            android:layout_height="@dimen/my_board_four_grid_icon_size"
            android:id="@+id/open_list"
            >

            <TextView
                android:id="@+id/board_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:clickable="false"
                android:padding="@dimen/my_boards_card_margin"
                android:text="0"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/very_large_text"
                android:textStyle="bold"

                />
        </RelativeLayout>



        <TextView
            android:layout_width="@dimen/my_board_four_grid_icon_size"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/boards_count"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/my_board_text_size"
            />
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
