<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:id="@+id/parent"
    android:padding="24dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_height"
        android:layout_centerInParent="true"
        android:background="@drawable/white_rounded_back">
    <RelativeLayout
        android:id="@+id/expressive_verbiage_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/edit_board_button_side_margin"
            android:layout_marginRight="@dimen/edit_board_button_side_margin"
            android:background="@drawable/edit_board_dialog_edit_text"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            >
        <TextView
            android:id="@+id/xyz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:text="@string/expressive_heading"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/mukta_semibold"
            />
        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container"
            android:layout_marginTop="4dp"
            android:fadeScrollbars="false"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical">
        <LinearLayout
            android:id="@+id/exp_verbiage_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="8dp"
            />
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="@dimen/dialog_width_verbiage"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/edit_baord_dialog_side_margin"
        android:layout_marginLeft="@dimen/edit_baord_dialog_side_margin"
        android:layout_marginRight="@dimen/edit_baord_dialog_side_margin"
        android:layout_marginTop="@dimen/edit_board_dialog_internal_margin_top"
        >


        <Button
            android:id="@+id/save_button"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="@string/txtSave"
            android:textAllCaps="false"
            android:background="@drawable/button_background"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/profile_save_btn_height"
            android:textSize="@dimen/profile_save_btn_txt_size"
            />
        <Button
            android:id="@+id/cancel_button"
            android:background="@drawable/button_background"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="@string/reset"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/profile_save_btn_height"
            android:textSize="@dimen/profile_save_btn_txt_size"
            />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>