<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level1_bg"
    android:id="@+id/parent"
    tools:context="com.dsource.idc.jellowintl.makemyboard.EditBoard">

                <LinearLayout
                    android:id="@+id/expressiveOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/exp_icon_bottom_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:alpha=".5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivlike"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/like" />

                    <ImageView
                        android:id="@+id/ivyes"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/yes" />

                    <ImageView
                        android:id="@+id/ivadd"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/more" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expressiveTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/exp_icon_bottom_margin"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:alpha=".5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivdislike"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/dontlike" />

                    <ImageView
                        android:id="@+id/ivno"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/no" />

                    <ImageView
                        android:id="@+id/ivminus"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/less" />
                </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutNavigation"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:paddingBottom="12dp"
                android:layout_marginBottom="-16dp">

                <ImageView
                    android:id="@+id/ivhome"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_home_my_board" />

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivhome"
                    android:src="@drawable/back"
                    android:layout_toLeftOf="@+id/ivhome" />
            </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag here to move out of the category"
        android:id="@+id/move_out_hint"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/expressiveOne"
        android:layout_toLeftOf="@id/expressiveTwo"
        android:id="@+id/recycler_view_container"
        android:layout_above="@id/relativeLayoutNavigation"
        android:layout_below="@id/move_out_hint"
        android:layout_toEndOf="@id/expressiveOne"
        android:layout_toStartOf="@id/expressiveTwo">
            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_recycler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:clipToPadding="false"
                android:fadeScrollbars="false"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbars="vertical"
                android:layout_marginBottom="8dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>


</RelativeLayout>
