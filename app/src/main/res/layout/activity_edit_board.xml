<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIntro"
    tools:context="com.dsource.idc.jellowintl.makemyboard.EditBoard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/icon_edit_recycler"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_above="@id/relativeLayoutNavigation"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/expressiveOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/exp_icon_bottom_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:alpha=".5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivlike"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/like" />

                    <ImageView
                        android:id="@+id/ivyes"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/yes" />

                    <ImageView
                        android:id="@+id/ivadd"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/more" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expressiveTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/exp_icon_bottom_margin"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:alpha=".5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivdislike"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/dontlike" />

                    <ImageView
                        android:id="@+id/ivno"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/no" />

                    <ImageView
                        android:id="@+id/ivminus"
                        android:layout_width="@dimen/icon_edit_grid_size"
                        android:layout_height="@dimen/icon_edit_icon_size"
                        android:layout_marginBottom="@dimen/exp_icon_margin_bottom"
                        android:src="@drawable/less" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayoutNavigation"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/nav_background"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:paddingBottom="12dp"
                android:layout_marginBottom="-16dp">

                <ImageView
                    android:id="@+id/ivhome"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_home_my_board" />

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="@dimen/nav_bar_icons_width"
                    android:layout_height="@dimen/nav_bar_icon_height"
                    android:src="@drawable/back"
                    android:layout_toLeftOf="@+id/ivhome"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_recycler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:clipToPadding="false"
                android:fadeScrollbars="false"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbars="vertical"
                android:layout_marginBottom="8dp"
                android:layout_above="@id/relativeLayoutNavigation"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>
