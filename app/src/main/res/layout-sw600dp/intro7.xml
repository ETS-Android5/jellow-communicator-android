<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:layout_weight="10"
    android:id="@+id/main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:layout_weight="6"
        android:fontFamily="fonts/Mukta-Regular.ttf"
        android:textColor="#000000"
        android:paddingRight="32dp"
        android:textSize="20sp"
        android:text="@string/txt_intro7_getStartedDesc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="29">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/jellow_swipe"
            android:scaleX="0.8"
            android:scaleY="0.8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="7"
>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_btn_view"
            android:gravity="center"
            style="@style/defaultTextViewStyle"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:textSize="20sp"
            android:text="@string/txt_intro7_getStarted"
            android:textColor="@color/app_background"
            android:onClick="getStarted"/>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="64dp" />
</LinearLayout>
